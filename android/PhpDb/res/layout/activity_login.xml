<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.phpdb.LoginActivity" >

    <TextView
        android:id="@+id/textViewLemail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="43dp"
        android:layout_marginTop="75dp"
        android:paddingTop="10dp"
        android:text="Email Id"
        android:width="100dp"
        android:visibility="visible" />

    <TextView
        android:id="@+id/textViewLpass"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textViewLemail"
        android:layout_below="@+id/textViewLemail"
        android:layout_marginTop="22dp"
        android:width="100dp"
        android:text="Password" />

    <EditText
        android:id="@+id/editText1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/textViewLemail"
        android:layout_toRightOf="@+id/textViewLemail"
        android:ems="10"
        android:inputType="textEmailAddress" >

        <requestFocus />
    </EditText>

    <EditText
        android:id="@+id/editText2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/editText1"
        android:layout_below="@+id/editText1"
        android:ems="10"
        android:inputType="textPassword" />

    <Button
        android:id="@+id/buttonLogin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textViewLpass"
        android:layout_below="@+id/textViewLpass"
        android:layout_marginTop="40dp"
        android:text="LOGIN" />

</RelativeLayout>